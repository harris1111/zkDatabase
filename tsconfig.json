{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "preserveSymlinks": true
  },
  "references": [
    {
      "path": "./packages/common"
    },
    {
      "path": "./packages/permission"
    },
    {
      "path": "./packages/smart-contract"
    },
    {
      "path": "./packages/storage"
    },
    {
      "path": "./packages/kubo"
    },
    {
      "path": "./packages/proof-service"
    },
    {
      "path": "./packages/api"
    },
    {
      "path": "./packages/zkdb"
    },
    {
      "path": "./packages/compile-service"
    },
    {
      "path": "./packages/serverless"
    },
    {
      "path": "./packages/broker-service"
    },
    {
      "path": "./packages/ftp"
    },
  ],
  "include": [
    "./src/"
  ],
  "exclude": [
    "**/build",
    "**/node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.js",
    "**/examples"
  ]
}