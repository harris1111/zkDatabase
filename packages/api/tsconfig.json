{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@authentication": ["./src/authentication"],
      "@graphql": ["./src/graphql"],
      "@utils": ["./src/utils"],
    },
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["build", "node_modules"]
}
