{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": false,
    "typeRoots": ["node_modules/@types"],
    "outDir": "./build/",
    "rootDir": ".",
    "types": ["node","jest"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "build",
    "node_modules",
    "typechain/**/*.ts"
  ]
}
