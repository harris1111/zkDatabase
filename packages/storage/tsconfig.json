{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./build/",
    "rootDir": ".",
    "types": ["node", "jest"],
  },
  "references": [{ "path": "../common"}],
  "include": ["**/*.ts"],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "typechain/**/*.ts"
  ]
}
